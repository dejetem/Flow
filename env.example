# Flow Node Configuration
# Copy this file to .env and adjust values as needed

# Database Configuration
# For SQLite (recommended for local development)
DATABASE_URL=sqlite:flow.db

# For PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/flow

# Database Connection Pool Settings
DB_MAX_CONNECTIONS=100
DB_MIN_CONNECTIONS=5
DB_CONNECT_TIMEOUT=8
DB_IDLE_TIMEOUT=600
DB_MAX_LIFETIME=1800
DB_LOGGING_ENABLED=false

# Logging Configuration
LOG_LEVEL=info

# Flow Configuration Directory (optional)
# FLOW_CONFIG_HOME=/custom/path/to/flow/config
